# Database - MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/framecraft
# For MongoDB Atlas: mongodb+srv://[username]:[password]@[cluster].mongodb.net/[database]
MONGODB_URI=mongodb://localhost:27017/framecraft

# Legacy PostgreSQL (kept for reference, not used)
DATABASE_URL=postgresql://localhost:5432/framekraft

# Port (changed from 5000 to avoid AirPlay conflict)
PORT=3001

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# AI Services (optional - features will work without these)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Stripe (optional - payments will work without these in dev)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Twilio (optional - SMS features will work without these)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Node environment
NODE_ENV=development

# Replit Auth (for local development, set to localhost)
REPLIT_DOMAINS=localhost:3000,localhost:3001
REPL_ID=local-development
REPL_OWNER=local
REPLIT_DB_URL=