# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/framekraft

# MongoDB Configuration (Primary Auth Provider)
MONGODB_URI=mongodb://localhost:27017/framekraft
# For MongoDB Atlas use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/framekraft?retryWrites=true&w=majority

# Authentication Provider (mongodb, dynamodb, or replit)
AUTH_PROVIDER=mongodb

# JWT Secrets (Generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Application URL
APP_URL=http://localhost:5173
API_URL=http://localhost:5000

# Email Configuration (for password reset and verification)
EMAIL_FROM=noreply@framekraft.com

# Gmail Configuration (Option 1)
EMAIL_SERVICE=gmail
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# AWS SES Configuration (Option 2 - Recommended for production)
AWS_SES_ENABLED=false
AWS_SES_FROM_EMAIL=noreply@framekraft.com
AWS_SES_REPLY_TO=support@framekraft.com
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-for-ses
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-for-ses

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AI Services (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AWS Configuration (Only if using DynamoDB)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# DYNAMODB_LOCAL=false

# Environment
NODE_ENV=development
PORT=5000

# Replit Auth (Only if using Replit)
# REPLIT_DOMAINS=your-replit-domain.repl.co
# REPL_ID=your-repl-id
# ISSUER_URL=https://replit.com/oidc